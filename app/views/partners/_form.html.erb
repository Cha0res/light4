<%= form_for @partner,html: { class: 'form_area' } do |f| %>
    <div class="content_area" >
      <div class="layui-form inside_area">
        <div class="layui-form-item">
          <label class="layui-form-label">logo</label>
          <div class="layui-input-block">
            <div class="pic_select_area" onmouseover='$(".pic_cover_area").show()'  onmouseout='$(".pic_cover_area").hide()'>
              <%= image_tag @partner.logo.url(:medium), class:'pic_display' %>
              <div class="pic_cover_area">
                <span class="pic_choose_area" onclick='$(".pic_choose_button").trigger("click")'>选择图片</span>
                <%= f.file_field :logo, class:'pic_choose_button' %>
              </div>
            </div>
          </div>
        </div>
        <div class="layui-form-item">
          <label class="layui-form-label">合作方名</label>
          <div class="layui-input-block">
            <%= f.text_field :name, class: 'layui-input' %>
          </div>
        </div>
        <div class="layui-form-item">
          <label class="layui-form-label">主页</label>
          <div class="layui-input-block">
            <%= f.text_field :official_site, class: 'layui-input' %>
          </div>
        </div>

      </div>
    </div>
    <div class="button_area">
      <div class="button_area">
        <div class="inside_area">
          <%= f.submit '保存', :class=>'layui-btn' %>
          <%= link_to '返回', partners_path, :class=>'layui-btn layui-btn-primary' %>
        </div>
      </div>
    </div>
<% end %>

<script>
    layui.use(['layedit'], function(){

    });

    $(function() {
        $('.pic_choose_button').change(function(e) {
            var file = e.target.files[0];
            preview(file);
        })
    });

    function preview(file) {
        var reader = new FileReader()
        reader.onload = function(e) {
            $('.pic_display').attr("src", e.target.result)
        }
        reader.readAsDataURL(file)
    }
</script>