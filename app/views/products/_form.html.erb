<%= form_for @product do |f| %>

    <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@product.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @product.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :product_type %><br>
      <%= f.text_field :product_type %>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description,  class:'layui-textarea'%>
    </p>

    <p>
      <%= f.label :cover %><br>
      <%= f.text_field :cover %>
    </p>

    <p>
      <%= f.submit %>
    </p>

    <%= link_to 'Back', products_path %>

<% end %>

<script>
    layui.use(['layedit', 'form'], function(){
        var layedit = layui.layedit;
        layedit.set({
            uploadImage: {
                url: '<%=upload_image_path%>', //接口url
                type: 'post' //默认post
            }
        });
        layedit.build('product_description'); //建立编辑器
    });
</script>