<%= form_for @story,html: { class: 'form_area' } do |f| %>
    <div class="content_area" >
      <div class="layui-form inside_area">
        <div class="layui-form-item">
          <label class="layui-form-label">时间节点</label>
          <div class="layui-input-block">
            <%= f.text_field :time_node, class: 'layui-input', placeholder:'yyyy-mm-dd', onclick:'layui.laydate({elem: this})' %>
          </div>
        </div>

        <div class="layui-form-item">
          <label class="layui-form-label">描述</label>
          <div class="layui-input-block">
            <%= f.text_area :description, class:'layui-textarea' %>
          </div>
        </div>

      </div>
    </div>
    <div class="button_area">
      <div class="inside_area">
        <%= f.submit '保存', :class=>'layui-btn' %>
        <%= link_to '返回', stories_path, :class=>'layui-btn layui-btn-primary' %>
      </div>
    </div>
<% end %>

<script>
    layui.use( ['form','laydate'], function(){

    });
</script>