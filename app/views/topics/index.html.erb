<div class="whole_view">
  <div class="form_area">
    <div class="content_area" >
      <%= link_to new_topic_path, class:'add_button'  do %>
          <span class="plus_icon"></span>
      <% end %>
      <div class="inside_area">

        <% @topics.each do |topic| %>
            <div class="item_box">
              <div class="box_avatar_area">
                <% if topic.user_id != 0 %>
                  <%= image_tag topic.user.avatar.url(:medium) %>
                <% else %>
                    <%= image_tag 'admins/logo46-46.png'%>
                <% end %>
              </div>
              <div class="box_title_area">
                <%= topic.title %>
              </div>
              <div class="box_info_area">
                <%= topic.user.nick_name %>
              </div>
              <div class="col_line"></div>
              <div class="box_button_area">
                <%= link_to topic_path(topic), class: 'show_button' do %>
                    <%= image_tag 'admins/chakan-20-20.png'%>
                <% end %>
                <% if topic.user_id == 0 %>
                    <%= link_to edit_topic_path(topic), class: 'edit_button' do %>
                        <%= image_tag 'admins/xiugai-20-20.png'%>
                    <% end %>
                <% end %>
                <%= link_to topic_path(topic), class: 'delete_button',
                            method: :delete,
                            data: { confirm: '确定删除?' } do %>
                    <%= image_tag 'admins/shanchu20-20-.png'%>
                <% end %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
    <div class="button_area">
      <div class="inside_area">
        <%= paginate @topics %>
      </div>
    </div>
  </div>
</div>


