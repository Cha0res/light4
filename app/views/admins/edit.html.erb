
<div class="whole_view">
  <%= form_for :admin, url: admins_path(@admin),html: { class: 'form_area' }, method: :patch do |f| %>
      <div class="content_area" >
        <div class="layui-form inside_area">
          <div class="layui-form-item">
            <label class="layui-form-label">账号</label>
            <div class="layui-input-block">
              <%= f.text_field :name, class: 'layui-input' %>
            </div>
          </div>

          <div class="layui-form-item">
            <label class="layui-form-label">姓名</label>
            <div class="layui-input-block">
              <%= f.text_field :nick_name, class: 'layui-input' %>
            </div>
          </div>

          <div class="layui-form-item">
            <label class="layui-form-label">电子邮箱</label>
            <div class="layui-input-block">
              <%= f.text_field :email, class: 'layui-input' %>
            </div>
          </div>


          <div class="layui-form-item">
            <label class="layui-form-label">密码</label>
            <div class="layui-input-block">
              <%= f.password_field :password, class: 'layui-input' %>
            </div>
          </div>

        </div>

      </div>

      <div class="button_area">
        <div class="inside_area">
          <%= f.submit '保存', class: 'layui-btn'%>
        </div>
      </div>
  <% end %>
</div>

<script>
    layui.use(['layer','form'], function(){
      var notice = '<%= notice %>';
      if(notice && notice != ''){
        layer.msg(notice,{time: 1000});
        if(notice == '修改成功'){
            parent.location.reload();
        }
      }
    });
</script>