<%= form_for @designer, html: { multipart: true } do |f| %>

    <% if @designer.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@designer.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @designer.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
   <p>
      <%= f.file_field :avatar %>
    </p>

    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </p>
      <%= f.text_area :info,  class:'layui-textarea'%>
    <p>
      <%= f.submit '提交' ,class:'layui-btn', :data => { :"disable-with" => "提交中..." }%>
    </p>

    <%= link_to '返回', designers_path %>

<% end %>

<script>
    layui.use(['layedit', 'form'], function(){
        var layedit = layui.layedit;
        layedit.set({
            uploadImage: {
                url: '<%=upload_image_path%>', //接口url
                type: 'post' //默认post
            }
        });
        layedit.build('designer_info'); //建立编辑器
    });
</script>