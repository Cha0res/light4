<%= form_for :user , url: users_path do |f|%>
    <p>
      <%= f.label :账号 %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :昵称 %><br>
      <%= f.text_field :nick_name %>
    </p>

    <p>
      <%= f.label :电子邮箱 %><br>
      <%= f.text_field :email %>
    </p>

    <p>
      <%= f.label :密码 %><br>
      <%= f.password_field :password %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>