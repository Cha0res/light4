<div class="whole_view">
  <table>
    <tr>
      <th>頭像</th>
      <th>姓名</th>
      <th>手机号</th>
    </tr>

    <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.avatar.url(:thumb) %></td>
          <td><%= user.name %></td>
          <td><%= user.mobile %></td>
          <td><%= link_to 'Show', user_path(user) %></td>
          <td><%= link_to 'Destroy', user_path(user),
                          method: :delete,
                          data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </table>
</div>