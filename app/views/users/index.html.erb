<div class="whole_view">
  <div class="form_area">
    <div class="content_area" >
      <div class="inside_area">

        <% @users.each do |user| %>
            <div class="item_box">
              <div class="box_avatar_area">
                <%= image_tag user.avatar.url(:medium) %>
              </div>
              <div class="box_title_area">
                <%= user.name %>
              </div>
              <div class="box_info_area">
                <%= user.nick_name %>
              </div>
              <div class="col_line"></div>
              <div class="box_button_area">
                <%= link_to user_path(user), class: 'show_button' do %>
                    <%= image_tag 'admins/chakan-20-20.png'%>
                <% end %>
                <%= link_to user_path(user), class: 'edit_button',
                            method: :delete,
                            data: { confirm: '确定删除?' } do %>
                    <%= image_tag 'admins/shanchu20-20-.png'%>
                <% end %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
    <div class="button_area">
      <div class="inside_area">
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>


