<div class="whole_area">
  <div class="top_area">
    <div class="logo_area">
      <%= image_tag "page/index/logo46-46-.png" %>
    </div>
    <div class="nav_area">
      <ul class="layui-nav" lay-filter="">
        <li class="layui-nav-item"><a href="javascript:;">畅聊设计</a></li>
        <li class="layui-nav-item"><a href="javascript:;">设计师</a></li>
        <li class="layui-nav-item"><a href="javascript:;">品牌故事</a></li>
        <li class="layui-nav-item"><a href="javascript:;">产品案例</a></li>
        <li class="layui-nav-item layui-this"><a href="javascript:;">首页</a></li>
      </ul>
    </div>
    <div class="sign_area">
      <% if current_user %>
          <span><%= image_tag current_user.avatar.url(:thumb) %></span>
          <span class="in_out_span">
            <%= link_to current_user.nick_name, edit_user_path(current_user) %>|
            <%= link_to '注销', logout_path , class: "sign-out"%>
          </span>
      <% else %>
        <span class="in_out_span">
          <%= link_to '登录', login_path, class: "sign-in" %>|
          <%= link_to '注册', signup_path, class: "sign-up" %>
        </span>
      <% end %>
    </div>
  </div>

  <div class="slogan_area">
    <%= image_tag "page/index/bannerwenan1920-1080.png" %>
  </div>

  <div class="products_area">
    <div class="box">
      <div class="title">产品案例</div>
    </div>
  </div>
</div>

